{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleDetection": "force"
  },
  "include": [ "src/**/*"],
  "exclude": [ "src/**/__tests__/*" ],
}
